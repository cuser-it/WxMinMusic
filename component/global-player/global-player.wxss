/* Global Player Container */
.global-player-container {
  position: fixed;
  z-index: 9999;
}

/* Floating Button */
.floating-btn {
  position: fixed;
  bottom: 150rpx; /* Increased from 100rpx to clear tab bar */
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10000;
  overflow: hidden;
  /* Optimize for smoother rendering */
  will-change: transform, opacity;
  transition: opacity 0.2s ease-in-out;
}

.floating-album {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* Rotation Animation */
.rotating {
  animation: rotate 10s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* Expanded Player Panel */
.player-panel {
  position: fixed;
  bottom: 150rpx; /* Match floating button position */
  right: -400rpx;
  width: 380rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.5);
  transition: right 0.3s ease-in-out;
  z-index: 9999;
}

.player-panel.show {
  right: 30rpx;
}

.player-content {
  display: flex;
  align-items: center;
  padding: 20rpx;
  height: 100%;
}

/* Album Art */
.album-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
  background: rgba(255, 255, 255, 0.1);
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.album-art {
  width: 100%;
  height: 100%;
}

/* Song Info */
.song-info {
  flex: 1;
  margin-left: 20rpx;
  margin-right: 10rpx;
  overflow: hidden;
}

.song-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 8rpx;
}

.artist-name {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Play Button */
.play-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* Close Button */
.close-btn {
  position: fixed;
  bottom: 320rpx; /* 150rpx (player bottom) + 160rpx (player height) + 10rpx spacing */
  right: 30rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10001;
}
